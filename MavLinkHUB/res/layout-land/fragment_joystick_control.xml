<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="30dp" >

        <com.zerokol.views.JoystickView
            android:id="@+id/joystick_left"
            android:layout_width="@dimen/size_230"
            android:layout_height="@dimen/size_230"
            android:layout_below="@id/tvPower" />

        <TextView
            android:id="@+id/tvPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="power" />
        <TextView
            android:id="@+id/tvRotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/joystick_left"
            android:text="Rotate" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp" >

        <com.zerokol.views.JoystickView
            android:id="@+id/joystick_right"
            android:layout_width="@dimen/size_250"
            android:layout_height="@dimen/size_250"
            android:layout_below="@id/tvFB"
            android:layout_toRightOf="@id/tvRL" />

        <TextView
            android:id="@+id/tvFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Foreward/\nBackWard" />

        <TextView
            android:id="@+id/tvRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Left/\nRight" />
    </RelativeLayout>

    <ToggleButton
        android:id="@+id/tbRC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_50" />

</RelativeLayout>